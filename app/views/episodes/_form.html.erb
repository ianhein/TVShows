<%= form_with(model: episode) do |form| %>
  <% if episode.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(episode.errors.count, "error") %> prohibited this episode from being saved:</h2>

      <ul>
        <% episode.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number %>
  </div>

  <div class="field">
    <%= form.label :minutes %>
    <%= form.number_field :minutes %>
  </div>

  <div class="field">
    <%= form.label :season_id %>
    <%= form.select(:season_id, Season.all.collect {|p| [ p.number, p.id ] }) %>
  </div>

  <div class="field">
    <%= form.label :series_id %>
    <%= form.select(:series_id, Series.all.collect {|p| [ p.name, p.id ] }) %>
  </div>

  <div class="field">
    <%= form.label :emmited_at %>
    <%= form.datetime_select :emmited_at %>
  </div>






  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
