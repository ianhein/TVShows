<p id="notice"><%= notice %></p>

<h1>Episodes</h1>
<!--Filtro para buscar por Titulo 5.2-->
<form action="/episodes" method="GET">
  <input type="text" name="title" placeholder="Title" value="<%= @model %>" default =""/>
  <input type="submit", value="Filter" />
</form>


<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Emmited at</th>
      <th>Minutes</th>
      <th>Season Number</th>
      <th>Series' Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.number %></td>
        <td><%= episode.title %></td>
        <td><%= episode.emmited_at %></td>
        <td><%= episode.minutes %></td>
        <td><%= episode.season.number %></td><!--Agregar las columnas para mostrar el nÃºmero de temporada y nombre de la serie. 5.3-->
        <td><%= episode.season.series.name %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Episode', new_episode_path %>
<%= link_to 'Back', :back %>
